<%= render "shared/events_menu" %>

<div class="row-fluid">
  <div class="span4">
		<%= render "shared/news_preview", {news: @hd_dzp}%>
  </div>

	<div class="span8">
		<%= link_to raw(" <i class='icon-edit'></i>编辑 "), edit_polymorphic_path(@hd_dzp), class: "btn btn-primary" %>
		&nbsp;
		<%=link_to raw("<i class='icon-remove'></i>删除"), @hd_dzp, method: :delete, data: {confirm: "确认删除？"}, class: "btn" %>
		<hr />
		
		<div class="">
			<table class="table table-bordered">
				<tr>
					<td>实际参与人次</td>
					<td><%=@cnt_histories%></td>
					<td><%=link_to raw("<i class='icon-list'></i>"), hd_dzp_dzp_histories_path(@hd_dzp.id)%></td>
				</tr>
				<tr>
					<td>已发奖项数量</td>
					<td><%=@cnt_got_prize%></td>
					<td><%=link_to raw("<i class='icon-list'></i>"), hd_dzp_dzp_histories_path(@hd_dzp.id, prize: true)%></td>
				</tr>
			</table>
		</div>
	</div>
</div>
