<%= render "shared/statistics_menu" %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>微信帐号</th>
      <th>微信用户ID</th>
      <th>日期</th>
      <th>消息数</th>
    </tr>
  </thead>
  <tbody>
    <% @req_stats.each do |it| %>
      <tr>
        <td><%=it.weixin_user.try :name%></td>
        <td><%=it.weixin_user_id%></td>
        <td><%=it.created_date%></td>
        <td><%=it.cnt%></td>
      </tr>
    <% end %>
  </tbody>
</table>
