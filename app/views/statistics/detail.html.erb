<%= render "shared/statistics_menu" %>

<%= render "detail_toolbar" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>用户ID</th>
      <th>微信帐号</th>
      <th>时间</th>
      <th>消息类型</th>
      <th>用户消息</th>
      <th>系统回复消息</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @request_messages.each do |it| %>
      <tr>
        <td><%=it.weixin_user.try :id%></td>
        <td><%=it.weixin_user.try :weixin_id%></td>
        <td><%=it.created_at.strftime("%Y-%m-%d %H:%M")%></td>
        <td><%=it.msg_type%></td>
        <td><%=it.specific_content%></td>
        <td><%=it.response_message.try :specific_content%></td>
        <td> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%=paginate @request_messages%>
