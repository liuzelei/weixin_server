<table class="table table-bordered">
  <thead>
    <tr>
      <th>用户ID</th>
      <th>微信帐号</th>
      <th>时间</th>
      <th>订阅/取消</th>
      <th>系统回复消息</th>
    </tr>
  </thead>
  <tbody>
    <% @request_follows.each do |it| %>
      <tr>
        <td><%=it.weixin_user.try :id%></td>
        <td><%=it.weixin_user.try :weixin_id%></td>
        <td><%=it.created_at.strftime("%Y-%m-%d %H:%M")%></td>
        <td><%=it.wx_event.try :event%></td>
        <td><%=it.response_message.try :specific_content%></td>
      </tr>
    <% end %>
  </tbody>
</table>

