<%= render "shared/weixin_users_menu" %>

<%= render "form_search" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>头像</th>
      <th>昵称</th>
      <th>用户ID</th>
      <th>性别</th>
      <th>年龄</th>
      <th>地址</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @weixin_users.each do |it| %>
      <tr>
        <td><%=image_tag it.avatar, alt: "", class: "weixin_user_avatar" if it.avatar%></td>
        <td><%=it.name%></td>
        <td><%=it.id%></td>
        <td><%=it.sex_name%></td>
        <td><%=it.age_range%></td>
        <td><%="x: #{it.latitude}, y: #{it.longitude}, s: #{it.scale}"%></td>
        <td>
          <%= link_to raw("<i class='icon-search'></i>"), it %>
          &nbsp;
          <%= link_to raw("<i class='icon-edit'></i>"), edit_weixin_user_path(it) %>
          &nbsp;
          <%= link_to raw("<i class='icon-list'></i>"), messages_weixin_user_path(it) %>
          &nbsp;
          <%#= link_to raw("<i class='icon-remove'></i>"), it, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
