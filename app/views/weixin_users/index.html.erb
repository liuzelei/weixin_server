<%= render "shared/weixin_users_menu" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>用户ID</th>
      <th>用户微信ID</th>
      <th>性别</th>
      <th>年龄</th>
      <th>地址</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @weixin_users.each do |it| %>
      <tr>
        <td><%=it.id%></td>
        <td><%=it.weixin_id%></td>
        <td><%=it.sex_name%></td>
        <td><%=it.age_range%></td>
        <td><%="x: #{it.location_x}, y: #{it.location_y}, s: #{it.scale}"%></td>
        <td>
          <%= link_to raw("<i class='icon-search'></i>"), it %>
          &nbsp;
          <%= link_to raw("<i class='icon-edit'></i>"), edit_weixin_user_path(it) %>
          &nbsp;
          <%#= link_to raw("<i class='icon-remove'></i>"), it, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
