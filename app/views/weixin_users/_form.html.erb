<%= form_for(@weixin_user, html: {class: "form-inline"}) do |f| %>
  <% if @weixin_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@weixin_user.errors.count, "error") %> prohibited this weixin_user from being saved:</h2>

      <ul>
      <% @weixin_user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    用户ID： <%= @weixin_user.id %>
    &nbsp; &nbsp; &nbsp; &nbsp;
