<%#= render "shared/articles_menu" %>
<%= render "shared/news_menu" %>

<%=link_to raw(" <i class='icon-plus'></i>新增 "), new_article_path, class: "btn btn-primary right"%>
<br />
<br />
<div style="clear:both;"></div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>标题</th>
      <th>内容</th>
      <th>文章链接</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
	<% @articles.each do |it| %>
    <tr>
      <td><%= it.id%></td>
      <td><%= it.title%></td>
      <td><%= Sanitize.clean(it.content).truncate(200)%></td>
      <td><%= pres_article_url(it)%></td>
      <td>
				<%=link_to raw("<i class='icon-folder-open'></i>"), pres_article_path(it), target: "_blank"%>
        &nbsp; &nbsp;
				<%=link_to raw("<i class='icon-edit'></i>"), edit_article_path(it)%>
        &nbsp; &nbsp;
				<%=link_to raw("<i class='icon-remove'></i>"), it, method: :delete, data: {confirm: "确认删除？"} %>
      </td>
    </tr>
	<% end %>
  </tbody>
</table>

<%=paginate @articles%>

