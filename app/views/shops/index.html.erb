<% render "shared/shops_menu" %>

<%=link_to raw(" <i class='icon-plus'></i>新增 "), new_shop_path, class: "btn btn-primary right"%>

<table class="table table-hover">
  <thead>
    <tr>
      <th>门店名称</th>
      <th>地址</th>
      <th>联系电话</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.address %></td>
        <td><%= shop.phone_number %></td>
        <td><%= link_to raw("<i class='icon-search'></i>"), shop %>&nbsp;<%= link_to raw("<i class='icon-edit'></i>"), edit_shop_path(shop) %>&nbsp;<%= link_to raw("<i class='icon-remove'></i>"), shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


