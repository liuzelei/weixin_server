<%= nested_form_for @keyword_reply, html: {class: "form-horizontal"} do |f| %>
  <% if @keyword_reply.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@keyword_reply.errors.count, "error") %> prohibited this keyword_reply from being saved:</h2>

      <ul>
        <% @keyword_reply.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="control-group">
      <%= f.label :keyword, "关键词", class: "control-label"  %>
      <div class="controls">
        <%= f.text_field :keyword %>
      </div>
    </div>
  </fieldset>

  <br />
  

  <%= f.fields_for :replyings do |ff| %>
    <fieldset>
      <div class="control-group">
        <%= ff.label :reply_type, "回复类型", class: "control-label"  %>
        <div class="controls">
          <%= ff.select :reply_type, options_for_select(["ReplyText", "Audio", "News", "Activity"]), class: "" %>
        </div>
      </div>
      <div class="control-group">
        <%= ff.label :reply_id, "回复消息ID", class: "control-label"  %>
        <div class="controls">
          <%= ff.number_field :reply_id, class: "" %>
        </div>
      </div>
      <br />

      <%= ff.link_to_remove "删除该回复", class: "rm_keyword_reply_replying" %>
    </fieldset>

    <br />
  <% end %>


  <br />
  <%= f.link_to_add raw("<i class='icon-plus'></i>添加回复"), :replyings, class: "btn", id: "add_keyword_reply_replying"%>
  &nbsp; &nbsp; &nbsp;
  <%= f.submit "提交", class: "btn btn-primary" %>

<% end %>

