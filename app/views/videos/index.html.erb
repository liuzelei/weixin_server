<%= render "shared/news_menu" %>

<%=link_to raw(" <i class='icon-plus'></i>新增 "), new_video_path, class: "btn btn-primary right"%>
<br />
<br />
<div style="clear:both;"></div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>标题</th>
      <th>视频</th>
      <th>视频地址（原始）</th>
      <th>视频地址（flv）</th>
      <th>视频地址（mp4）</th>
      <th>视频地址（m3u8）</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
	<% @videos.each do |it| %>
    <tr>
      <td><%= it.id%></td>
      <td><%= it.title%></td>
			<td><%= video_tag it.video_url_origin, autoplay: false, controls: true, width: "160"%></td>
      <td><%= it.video_url_origin %></td>
			<td><%= it.video_url_flv_wifi %><br/><br/><%= it.video_url_flv_3g %></td>
			<td><%= it.video_url_mp4_wifi %><br/><br/><%= it.video_url_mp4_3g %></td>
      <td><%= it.video_url_m3u8_wifi %><br/><br/><%= it.video_url_m3u8_3g %></td>
      <td>
				<%=link_to raw("<i class='icon-folder-open'></i>"), it%>
        &nbsp; &nbsp;
				<%=link_to raw("<i class='icon-edit'></i>"), edit_video_path(it)%>
        &nbsp; &nbsp;
				<%=link_to raw("<i class='icon-remove'></i>"), it, method: :delete, data: {confirm: "确认删除？"} %>
      </td>
    </tr>
	<% end %>
  </tbody>
</table>

<%=paginate @videos%>

