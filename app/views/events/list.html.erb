<%= render "shared/events_menu" %>

<%=link_to raw(" <i class='icon-plus'></i>新增 "), new_event_path, class: "btn btn-primary right"%>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>活动类型</th>
      <th>标题</th>
      <th>描述</th>
      <th>图文回复的大图</th>
      <th>预计人次</th>
      <th>奖数量</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @events.each do |it| %>
      <tr>
				<td><span class="badge badge-success"><%=it.id%></span></td>
        <td><%= it.category %></td>
        <td><%= it.title %></td>
        <td><%= it.description %></td>
        <td><%= image_tag it.pic_url, alt: "" %></td>
        <td><%= it.max_random %></td>
        <td><%= it.max_luck %></td>
        <td><%= link_to raw("<i class='icon-search'></i>"), it %>&nbsp;<%= link_to raw("<i class='icon-edit'></i>"), edit_event_path(it) %>&nbsp;<%= link_to raw("<i class='icon-remove'></i>"), it, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tr>
  </tbody>
</table>
