<%= render "shared/events_menu" %>

<%=link_to raw(" <i class='icon-plus'></i>新增 "), new_activity_path, class: "btn btn-primary right"%>

<table class="table table-hover">
  <thead>
    <tr>
      <th>名称</th>
      <th>关键词</th>
      <th>标题</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @activities.each do |it| %>
      <tr>
        <td><%= it.name %></td>
        <td><%= it.keyword %></td>
        <td><%= it.title %></td>
        <td><%= link_to raw("<i class='icon-search'></i>"), it %>&nbsp;<%= link_to raw("<i class='icon-edit'></i>"), edit_activity_path(it) %>&nbsp;<%= link_to raw("<i class='icon-remove'></i>"), it, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tr>
  </tbody>
</table>
